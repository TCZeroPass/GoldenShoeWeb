<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" initial-scale=1 />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container">
        <nav class="navbar  navbar-expand-sm navbar-dark bg-dark navbar-fixed-top">
            <div class="container mt-0">

                <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })"><img src="~/Pics/logo.jpg" height="50" /></a>

                <!--  @Html.ActionLink("GoldenShoe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })-->

                <button type="button" class="navbar-toggler " data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" data-toggle="dropdown">Products</a>
                        <div class="dropdown-menu">
                            <ul>
                                <li class="dropdown-item">@Html.ActionLink("Men`s shoes", "Index", "Home", new { area = "" }, null)</li>
                                <li class="dropdown-item">@Html.ActionLink("Women`s shoes", "Index", "Home", new { area = "" }, null)</li>
                                <li class="dropdown-item">@Html.ActionLink("Children shoes", "Index", "Home", new { area = "" }, null)</li>
                            </ul>
                        </div>
                    </li>

                    <li>@Html.ActionLink("FAQ", "FAQ", "Pages", null, new { @class = "nav-item nav-link" })</li>
                    <!-- <li>@Html.ActionLink("Complaint", "Complaints", "Pages", null, new { @class = "nav-item nav-link" })</li>-->
                    <li>@Html.ActionLink("About", "About", "Pages", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Pages", null, new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("API", "Index", "Help", null, new { @class = "nav-item nav-link" })</li>

                </ul>

                <form class="form-inline ml-auto">
                    <div class="input-group ">
                        <input type="text" class="form-control" placeholder="Search">
                        <div class="input-group-append">
                            <button type="button" class="btn btn-secondary"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
                <div class="navbar-nav ">
                    <a href="@Url.Action("LoginPage", "Pages", new { area = "" })" class="nav-item nav-link">Login</a>
                </div>

            </div>
</div>
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />



        <footer id="sticky-footer" class="footer-bottom py-4 bg-dark text-white-50">
            <div class="footer" id="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <h4> Golden Shoe </h4>
                            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })"><img src="~/Pics/logo.jpg" height="100" /></a>
                        </div>
                        <div class="col-lg-3 col-sm-2 col-xs-3">
                            <h3> Contact </h3>
                            <ul>
                                <li><a class="email" href="#"> Customer support </a></li>
                                <br/>
                                <li> <p> Street 5 </p> </li>
                                <li> <p> London </p> </li>
                            </ul>
                        </div>
                        <div class="col-lg-3 col-sm-2 col-xs-3">
                            <ul>
                                <li> <h5> <a href="#" style="margin-top: 5em"> ABOUT US</a> </h5></li>
                                <li> <h5><a href="#"> CURRENT SERIES </a> </h5></li>
                                <li> <h5><a href="#"> THE HOUSE </a> </h5></li>
                                <li> <h5><a href="#"> LOOKING BACK </a> </h5></li>
                            </ul>
                        </div>
                    </div>
                </div>
                </div>
                <div>
                    <div class="container ml-1">
                        <small>Copyright &copy; @DateTime.Now.Year - GoldenShoe  </small>
                    </div>
                </div>

            
        </footer>










        @*<footer id="sticky-footer" class="py-4 bg-dark text-white-50">

                    <div class="container text-center">
                        <small>Copyright &copy; @DateTime.Now.Year - GoldenShoe  </small>
                    </div>

        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
